<h1>Customer List</h1>

<!-- Display all customers -->
<table border="1">
  <tr>
    <th>ID</th>
    <th>Full Name</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th>Image</th>
  </tr>
  <% @all_customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.full_name %></td>
      <td><%= customer.phone_number %></td>
      <td><%= customer.email.presence || "No Email" %></td>
      <td>
        <% if customer.image.attached? %>
          <%= image_tag url_for(customer.image), width: 50, height: 50 %>
        <% else %>
          No Image
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

